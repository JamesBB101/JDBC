package test;

import java.sql.*;


public class HW {

	public static void main(String[] args) {
		
		String url = "jdbc:mysql://localhost:3306/jdbc?useSSL=false";
		try(Connection conn = DriverManager.getConnection(url, "root", "abcdggd123");) {
			String empno = "1001";
			
			String qryStmt = "SELECT * FROM employee WHERE empno=" + empno;
			Statement stmt = conn.createStatement();
			ResultSet rs = stmt.executeQuery(qryStmt);
			
			String qryStmt2 = "SELECT * FROM employee WHERE empno=" + empno;
			PreparedStatement pstmt = conn.prepareStatement(qryStmt2);
			ResultSet rs2 = pstmt.executeQuery();
			
			
			String qryStmt3 = "SELECT * FROM employee WHERE empno=?";
			
			while(rs2.next()){
				System.out.println("name = " + rs2.getString("ename"));
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}
		
	}
}
