package test;

import java.sql.*;


public class HW {

	public static void main(String[] args) {
		
		String url = "jdbc:mysql://localhost:3306?/dbc?useSSL=false";
		try(Connection conn = DriverManager.getConnection(url, "root", "abcdggd123");) {
			String empno = "1001";
			String qryStmt = "SELECT * FROM employee WHERE empno=" + empno;
			Statement stmt = conn.createStatement();
			ResultSet rs = stmt.executeQuery(qryStmt);
			
			while(rs.next()){
				System.out.println("name = " + rs.getString("ename"));
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}
		
	}
}
