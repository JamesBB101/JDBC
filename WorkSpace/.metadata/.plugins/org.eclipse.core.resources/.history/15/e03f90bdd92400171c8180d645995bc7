package com.iii.BB101.james;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.Calendar;

// Insert one employee
public class InsertDemo2 {
	public static void main(String[] args) {
		Connection conn = null;
		try {     
			String connUrl = "jdbc:mysql://localhost:3306/jdbc?useSSL=false";
			conn = DriverManager.getConnection(connUrl, "root", "james2222");
			
//			java.util.Date now = new java.util.Date();
//			java.sql.Date ds1 = new java.sql.Date(long1);
//			long long1 = now.getTime();
//			System.out.println(now);
//			System.out.println(long1);
//			String now2 = java.sql.Date(long1).toString();
			java.util.Date du = new java.util.Date();
			long long1 = du.getTime();
			System.out.println(long1);
			java.sql.Date ds1 = new java.sql.Date(long1);
			System.out.println("java.sql.Date()  = " + ds1);
			
			String now2 = ds1.toString();
//			Date sqlDate = new Date(long1);
//			System.out.println(sqlDate);
//			out.printf("%tY / %<tm / %<td %<tT %n", sqlDate);
//			"%tY / %<tm / %<td",ds1   "2008/10/10"
			
			String insStmt = "INSERT INTO employee VALUES (?, ?, ?, ?, ?, ?)";
			PreparedStatement pstmt = conn.prepareStatement(insStmt);
			pstmt.setInt(1, 1009);
			pstmt.setString(2, "Jean Tsao");
			pstmt.setString(3, now2);
			pstmt.setDouble(4, 55000);
			pstmt.setInt(5, 100);
			pstmt.setString(6, "senior engineer");
			
			int num = pstmt.executeUpdate();
			System.out.println("insert count = " + num);
			
			pstmt = conn.prepareStatement("SELECT * FROM employee");
			ResultSet rs = pstmt.executeQuery();
			
			while(rs.next()) {
				System.out.print("name = " + rs.getString("ename") + ", ");
				System.out.println("salary = " + rs.getDouble("salary"));
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			if (conn != null)
				try {
					conn.close();
				} catch(SQLException e) { 
					e.printStackTrace();
				}
		}
	}// end of main()
}// end of class InsertDemo
